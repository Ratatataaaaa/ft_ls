{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                //"-Wall",
                //"-Wextra",
                //"-Werror",
                "-g",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/ft_ls",
                "-L${workspaceFolder}/libft/",
                "-lft"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}